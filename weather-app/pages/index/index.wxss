.weather-wrapper {
  width: 750rpx;
  height: 760rpx;
  position: relative;
}

.temperature {
  text-align: center;
  padding-top: 100px;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}