view {
  box-sizing: border-box;
}

.weather-wrapper {
  width: 750rpx;
  height: 760rpx;
  position: relative;
}

.temperature {
  text-align: center;
  padding-top: 100px;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}

.weather-24-title {
  padding: 40rpx 0;
  text-align: center;
}

.image-24-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.title-24 {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  margin-left: 10rpx;
}

.forecast-list {
  display: flex;
  padding: 0 20rpx;
}

.forecast-list-item {
  width: 120rpx;
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.forecast-hour {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 40rpx 0;
}

.today-weather {
  display: flex;
  justify-content: space-between;
  opacity: 0.5;
  font-size: 30rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  margin: 125rpx 10px;
  padding: 25rpx 0;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.location-wrapper {
  text-align: center;
  position: absolute;
  left: 50%;
  top: 30rpx;
  transform: translateX(-50%);
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  z-index: 10;
}

.location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
  vertical-align: top;
}

.location-city {
  vertical-align: top;
}

.location-tips {
  margin-top: 10rpx;
}