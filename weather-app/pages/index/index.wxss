.weather-wrapper {
  width: 750rpx;
  height: 760rpx;
  position: relative;
}

.temperature {
  text-align: center;
  padding-top: 100px;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: -1;
}

.weather-24-title {
  padding: 40rpx 0;
  text-align: center;
}

.image-24-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.title-24 {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  margin-left: 10rpx;
}

.forecast-list {
  display: flex;
  padding: 0 20rpx;
}

.forecast-list-item {
  width: 120rpx;
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.forecast-hour {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather-icon {
  width: 60rpx;
  height: 60rpx;
  margin: 40rpx 0;
}